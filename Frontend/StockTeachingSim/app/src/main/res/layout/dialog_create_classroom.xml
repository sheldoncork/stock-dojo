<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/classroom_name_layout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/classroom_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/classroom_name_input_hint"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/start_balance_layout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:prefixText="@string/start_balance_input_prefix">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/start_balance_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/start_balance_input_hint"
            android:inputType="numberDecimal"
            android:text=""/>
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>