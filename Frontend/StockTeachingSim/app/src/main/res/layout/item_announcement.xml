<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="12dp"
    style="@style/Widget.Material3.CardView.Filled"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/announcement_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/temp_title"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/announcement_classname"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/announcement_classname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/classroom_class_name"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textStyle="italic"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/new_announcement_indicator_announcement"
            app:layout_constraintTop_toTopOf="@id/announcement_title"
            app:layout_constraintBottom_toBottomOf="@id/announcement_title"/>

        <View
            android:id="@+id/new_announcement_indicator_announcement"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/notification_dot"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/announcement_title"/>

        <TextView
            android:id="@+id/announcement_content_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/temp_content_preview"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            app:layout_constraintTop_toBottomOf="@id/announcement_title"/>

        <TextView
            android:id="@+id/announcement_datetime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/posted_time_stamp"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="?android:textColorSecondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/announcement_edited"
            app:layout_constraintTop_toBottomOf="@id/announcement_content_preview"/>

        <TextView
            android:id="@+id/announcement_edited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edited_time_stamp"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="?android:textColorSecondary"
            android:textStyle="italic"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/announcement_datetime"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>